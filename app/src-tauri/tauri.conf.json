{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KG-Oversight",
  "version": "1.0.3",
  "identifier": "com.elegalex.kg-oversight",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "KG-Oversight - Knowledge Graph Explorer",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "Knowledge Graph pour la supervision qualité des sous-traitants",
    "longDescription": "KG-Oversight est une application de visualisation de graphe de connaissances pour la supervision qualité des sous-traitants dans le domaine clinique. Elle permet de visualiser les relations entre sous-traitants, contrats, audits, findings et KQI.",
    "copyright": "2025 KG-Oversight",
    "publisher": "KG-Oversight Team",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": [],
        "section": "science",
        "priority": "optional"
      },
      "rpm": {
        "release": "1"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "frameworks": [],
      "entitlements": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "nsis": {
        "languages": ["French", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser"
      },
      "wix": null
    },
    "resources": []
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBRkY1ODVGRjFBRUM4RTgKUldUb3lLN3hYMWovdWoyd1dqNDBKMS9LN2N6MWFMYjc3aUxGaHh0aUdWaE56SFBTWHBDdVdCNHEK",
      "endpoints": [
        "https://github.com/ElegAlex/KG_OVERSIGHT/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
